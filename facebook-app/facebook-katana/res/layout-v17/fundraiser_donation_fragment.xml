                <com.facebook.resources.ui.FbTextView android:id="@id/fundraiser_donation_choose_amount_subheader" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/FundraiserDonationSubHeader" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:background="@color/fbui_white" android:layout_width="fill_parent" android:layout_height="wrap_content">
