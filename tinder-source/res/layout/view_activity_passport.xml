        <View android:id="@id/maps_search_underline" android:background="@color/text_hint_color" android:layout_width="fill_parent" android:layout_height="@dimen/edittext_underline_height" android:layout_marginLeft="@dimen/margin_small" android:layout_marginRight="@dimen/margin_small" android:layout_toLeftOf="@id/actionbar_mylocation" android:layout_toRightOf="@id/imageView_icon" android:layout_alignBottom="@id/imageView_icon" />
    </RelativeLayout>
    <com.tinder.views.MapFrameLayout android:id="@id/map_container_frame" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/actionbar_passport" android:isScrollContainer="true">
        <fragment android:id="@id/fragment_map" android:layout_width="fill_parent" android:layout_height="fill_parent" name="com.tinder.fragments.FragmentMap" class="com.tinder.fragments.FragmentMap" />
    </com.tinder.views.MapFrameLayout>
    <FrameLayout android:id="@id/passport_search_layout" android:background="@color/white" android:visibility="gone" android:clipChildren="true" android:clipToPadding="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/actionbar_passport">
        <ListView android:id="@id/passport_search_list" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        <ProgressBar android:layout_gravity="center" android:id="@id/passport_search_progress" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" />
    </FrameLayout>
</RelativeLayout>