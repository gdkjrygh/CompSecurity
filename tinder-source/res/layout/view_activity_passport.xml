        <ImageView android:id="@id/imageView_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/passport_actionbar_title_normal" android:layout_toRightOf="@id/view_back_icon" android:layout_centerVertical="true" />
        <ImageView android:id="@id/actionbar_mylocation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/suggested_screen_margins" android:src="@drawable/passport_gps_disabled" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
        <ImageView android:id="@id/maps_search_icon" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/suggested_screen_margins" android:src="@drawable/actionbar_search_normal" android:layout_toRightOf="@id/imageView_icon" android:layout_centerVertical="true" android:scaleX="0.9" android:scaleY="0.9" />
        <com.tinder.views.CustomTextView android:textSize="@dimen/text_xlarge" android:textColor="@color/text_hint_color" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_xsmall" android:singleLine="true" android:layout_toRightOf="@id/maps_search_icon" android:layout_centerVertical="true" app:font="light|light_italic" />
        <com.tinder.views.CustomEditText android:textColor="@color/text_dark" android:textColorHint="@color/text_hint_color" android:id="@id/passport_edittext_search" android:background="@null" android:paddingLeft="@dimen/padding_small" android:focusableInTouchMode="false" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginRight="@dimen/margin_small" android:hint="@string/passport_search_hint" android:cursorVisible="false" android:singleLine="true" android:layout_toLeftOf="@id/actionbar_mylocation" android:layout_toRightOf="@id/maps_search_icon" android:inputType="textCapWords|textAutoComplete" android:imeOptions="actionSearch" app:font="light|light_italic" />
