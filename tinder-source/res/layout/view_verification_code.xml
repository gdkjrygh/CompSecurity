<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:paddingBottom="@dimen/verification_screen_padding" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <com.tinder.views.CustomTextView android:textSize="@dimen/verification_title_size" android:textColor="@color/gray_dark" android:gravity="left" android:id="@id/textView_prompt" android:padding="@dimen/verification_screen_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/enter_code_prompt" app:font="semi_bold" />
        <com.tinder.views.CustomTextView android:textSize="@dimen/text_large" android:textColor="@color/text_light" android:id="@id/textView_details" android:paddingLeft="@dimen/verification_screen_padding" android:paddingRight="@dimen/verification_screen_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_med" android:text="@string/enter_code_details" android:layout_below="@id/textView_prompt" app:font="semi_bold" />
        <RelativeLayout android:id="@id/layout_enter_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_xlarge" android:layout_below="@id/textView_details" android:layout_centerInParent="true">
