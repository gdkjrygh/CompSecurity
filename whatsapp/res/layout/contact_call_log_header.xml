    <LinearLayout android:orientation="vertical" android:id="@id/calls_card" android:background="@drawable/panel_top" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/card_v_padding">
        <FrameLayout style="@style/CardHeader">
