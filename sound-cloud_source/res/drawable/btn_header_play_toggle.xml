<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true" android:drawable="@drawable/pc_pages_pause_pressed" />
    <item android:state_checked="false" android:state_pressed="true" android:drawable="@drawable/pc_pages_play_pressed" />
    <item android:state_focused="true" android:state_checked="true" android:drawable="@drawable/pc_pages_pause_focused" />
    <item android:state_focused="true" android:state_checked="false" android:drawable="@drawable/pc_pages_play_focused" />
    <item android:state_checked="false" android:drawable="@drawable/pc_pages_play" />
    <item android:state_checked="true" android:drawable="@drawable/pc_pages_pause" />
</selector>