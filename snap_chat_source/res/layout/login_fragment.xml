            <TextView android:textSize="@dimen/registration_textview_error_message_text_size" android:textColor="@color/red_text" android:id="@id/login_username_email_error_message" android:paddingLeft="@dimen/default_gap" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="-4.0dip" android:minLines="1" android:layout_below="@id/login_username_email_field" android:layout_alignLeft="@id/login_username_email_field" />
            <EditText android:id="@id/login_password_field" android:background="@drawable/aa_holo_edit_text_black_selector" android:layout_width="fill_parent" android:layout_height="@dimen/ui_element_unit" android:layout_marginTop="-4.0dip" android:hint="@string/login_password_hint" android:layout_below="@id/login_username_email_error_message" android:inputType="textPassword" style="@android:style/Widget.Holo.EditText" />
            <ImageView android:id="@id/login_password_error_red_x" android:layout_alignRight="@id/login_password_field" android:layout_alignBottom="@id/login_password_field" style="@style/ErrorRedX" />
