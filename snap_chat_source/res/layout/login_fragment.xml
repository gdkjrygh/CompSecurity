<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/login_fragment_background" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/default_gap_5x" android:layout_marginRight="@dimen/default_gap_5x">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/registration_title_size" android:textColor="@color/purple" android:gravity="center_horizontal" android:id="@id/login_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap_5x" android:layout_marginBottom="@dimen/default_gap_3x" android:text="@string/login_title" android:layout_alignParentTop="true" />
