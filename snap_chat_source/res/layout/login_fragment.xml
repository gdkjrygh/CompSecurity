        </RelativeLayout>
    </ScrollView>
    <Button android:id="@id/log_in_button" android:text="@string/landing_page_login" style="@style/RegistrationContinueButton" />
    <LinearLayout android:gravity="center" android:id="@id/login_continue_progressbar" android:visibility="invisible" android:layout_alignParentBottom="true" style="@style/RegistrationContinueButton">
        <ProgressBar android:gravity="center" android:padding="@dimen/default_gap" android:layout_width="@dimen/ui_element_unit" android:layout_height="fill_parent" />
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@id/login_continue_progressbar_message" android:layout_width="wrap_content" android:layout_height="fill_parent" />
    </LinearLayout>
</RelativeLayout>